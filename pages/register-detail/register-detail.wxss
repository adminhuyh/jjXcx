/* pages/register-detail/register-detail.wxss */
page {
  background-color: #f5f5f5;
}
.register-detail-card {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  background-image: url('https://cdn-we-retail.ym.tencent.com/miniapp/template/user-center-bg-v1.png');
  background-size: cover;
  background-repeat: no-repeat;
  padding: 0 24rpx;
}
.base-info{
	position: relative;
	font-weight: 200;
	font-feature-settings: "aalt";
	margin-top:10rpx;
	position: relative;
	padding: 0 30rpx;
	}
	.base {
		padding: 0 30rpx;
		display: flex;
		flex-direction: column;
		align-items: left;
		font-family: PingFangSC-Regular;
		text-align: left;
		line-height: 90rpx;
		background-color: #fbfbfb;
	}
	.textarea-info{
		margin-top:20rpx;
		padding-left: 30rpx;
		position: relative;
		align-items: left;
		font-family: PingFangSC-Regular;
		text-align: left;
		line-height: 90rpx;
		background-color: #fbfbfb;
		left: 0rpx; top: 19rpx
	}
	.textarea-content{
		position: relative; left: -8rpx; top: 0rpx; width: 652rpx; height: 352rpx; display: block; box-sizing: border-box
	}
	.image-info{
		position: relative;
		margin-top: 50rpx;
		display: inline-block; 
		box-sizing: border-box;
		background-color: #fbfbfb;
	}
	.image-detail{
		display: inline-block; 
		box-sizing: border-box;
	
	}
